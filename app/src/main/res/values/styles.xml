<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayout_Theme" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">

        <item name="android:progressDrawable">@drawable/full_sun</item>
        <item name="android:indeterminateDrawable">@drawable/full_sun</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>

    </style>




</resources>
