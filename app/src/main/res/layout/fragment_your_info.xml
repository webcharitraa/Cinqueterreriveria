<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.YourInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/low_light_grey"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <Button
            android:id="@+id/bt_edit_card"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/edit_cards"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/solid_orange_round_ten"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/solid_white_roun">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/placeholder"/>

        </RelativeLayout>
        <Button
            android:id="@+id/bt_edit_profile"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="Edit Profile"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:background="@drawable/solid_orange_round_ten"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_grey"
                    android:fontFamily="@fonts/roboto_lightitalic.ttf"
                    android:gravity="start"
                    android:hint="First Name"
                    android:textCursorDrawable="@color/dark_grey"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_12ssp"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_grey"
                    android:fontFamily="@fonts/roboto_lightitalic.ttf"
                    android:gravity="start"
                    android:hint="Last Name"
                    android:textCursorDrawable="@color/dark_grey"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_12ssp"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/light_grey"
                android:fontFamily="@fonts/roboto_lightitalic.ttf"
                android:gravity="start"
                android:hint="Mobile Number"
                android:textCursorDrawable="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:textColor="@color/dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/light_grey"
                android:fontFamily="@fonts/roboto_lightitalic.ttf"
                android:gravity="start"
                android:hint="Email Address"
                android:textCursorDrawable="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:textColor="@color/dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputEditText
android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/light_grey"
                android:fontFamily="@fonts/roboto_lightitalic.ttf"
                android:gravity="start"
                android:hint="Address"
                android:textCursorDrawable="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:textColor="@color/dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_grey"
                android:fontFamily="@fonts/roboto_lightitalic.ttf"
                android:gravity="start"
                android:hint="City"
                android:textCursorDrawable="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:textColor="@color/dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_grey"
                android:fontFamily="@fonts/roboto_lightitalic.ttf"
                android:gravity="start"
                android:hint="Country"
                android:textCursorDrawable="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:textColor="@color/dark_grey" />
        </com.google.android.material.textfield.TextInputLayout>






    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/solid_orange_rectangle"
        android:text="Save"
        android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>